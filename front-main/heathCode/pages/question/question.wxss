.container {
  padding: 20px;
	width: 100%;
}

.page-title {
	width: 100%;
  font-size: 23px;
  font-weight: bold;
  text-align: left;
  margin-bottom: 20px;
	margin-left: 40px;
}

.question-section {
	height: 400px;
  margin-bottom: 20px;
	padding: 0px 20px 20px;
	width: 80%;
	display: flex;
	flex-direction: column;
	justify-content: center;
	align-items: center;
	border-radius: 5%;
	box-shadow: 0px 5px 5px 3px rgba(0, 0, 0, 0.2);
}

.question-input {
  width: 85%;
  height: 200px;
  padding: 10px;
  border-radius: 5%;
  font-size: 16px;
  background-color: #f7f7f7;
	margin-bottom: 20px;
}

.image-section {
  
}

.image-preview {
  display: flex;
  justify-content: space-between;
  width: 100%;
}

.image-item {
  width: 120px;
  height: 120px;
  margin-right: 20px;
	margin-left: 20px;
  border-radius: 5px;
  object-fit: cover;
}

.submit-btn {
  background-color: #007aff;
  color: white;
  width: 100%;
  padding: 12px;
  font-size: 16px;
  border-radius: 5px;
}
