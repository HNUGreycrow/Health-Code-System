/* pages/code/code.wxss */
.bg{
  background-color: rgba(71, 111, 222, 1);
  /* height: 100vh; */
  min-height: 100vh;
  padding: 12px;
  padding-bottom: 24px;
}
.card{
  background-color: #fff;
  /* height: calc(100vh - 30px); */
  border-radius: 20px;
  overflow: hidden;
}
.tittle {
  background-color: #F5F5F5;
  height: 55px;
  line-height: 55px;
  padding: 0 30px;
  display: flex; /* 使用 Flexbox 布局 */
  align-items: center; /* 垂直居中 */
  justify-content: space-between; /* 左右分布 */
}

.left-container {
  display: flex; /* 使用 Flexbox 布局 */
  align-items: center; /* 垂直居中 */
}

.tittle .name {
  font-size: 20px;
  font-weight: 400;
  letter-spacing: 0px;
  color: rgba(51, 51, 51, 1);
}

.tittle .hide {
  width: 20px; /* 设置 hide 图像的宽度 */
  height: 20px; /* 设置 hide 图像的高度 */
  margin-left: 20px; /* 与 name 保持 20px 的距离 */
}

.tittle .home {
  width: 30px; /* 设置 home 图像的宽度 */
  height: 30px; /* 设置 home 图像的高度 */
}
